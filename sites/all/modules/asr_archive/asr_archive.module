function display_archive_result($arg){
  $result_id = strip_tags(isset($arg[0]) ? $arg[0] : 1);
  $sql = "SELECT result FROM asr_archive WHERE id =".$result_id;
  $result = db_query($sql);
  $res = '';
  while ($row = $result->fetchAssoc()){
     $res = $row['result'];
  }

  $res_arr = unserialize(gzuncompress(base64_decode($res)));
  // mail("marinabromberg@gmail.com","fff",$res);
  echo asr_forms_alignement_result($res_arr);
  //_output_json_response($out);
}
